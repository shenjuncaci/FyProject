        }
    }

    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "roomrepairid");
        if (IsDelData(KeyValue)) {
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/DormModule/RoomRepair/Delete', delparm, KeyValue.split(",").length);
        }
    }

