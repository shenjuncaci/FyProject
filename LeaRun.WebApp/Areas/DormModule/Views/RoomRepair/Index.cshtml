    function FinishNote()
    {
        var KeyValue = GetJqGridRowValue("#gridTable", "roomrepairid");

        var finishdt = GetJqGridRowValue("#gridTable", "finishdt");
        
       
        if (finishdt != undefined && finishdt!="")
        {
            alert("该单已经是完成状态，不能操作");
            return false;
        }
        if (IsChecked(KeyValue))
        {
            var durl = encodeURI('@Url.Action("FinishThis", "RoomRepair")?ID=' + KeyValue);
                        $.ajax({
                            type: "post",
                            url: durl,
                            async: false,
                            success: function (msg) {

                                $("#gridTable").trigger("reloadGrid");

                            },
                            error: function () {
                                alert("出错了");
                            }
                        });
        }
    }

    //刷新
    function windowload() {
        $("#gridTable").trigger("reloadGrid"); //重新载入
    }


