                <tr><td colspan="3"><strong>固定资产列表</strong></td><td><a class="button button-caution button-square button-small" onclick="addone(999)">添加</a></td></tr>
                <tr>
                    @*<th style="width:5%;display:none">题目ID</th>*@
                    <th style="width:10%">序号</th>
                    <th style="width:30%">资产名称</th>
                    <th style="width:10%">数量</th>
                    <th style="width:50%">备注</th>
                </tr>
            </table>
        </div>
    </div>

</form>
