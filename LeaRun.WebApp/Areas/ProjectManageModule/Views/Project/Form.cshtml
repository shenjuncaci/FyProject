                    <td class="formValue">
                        <select id="DataProvider" class="select" datacol="yes" err="数据提供" checkexpession="NotNull" style="width: 96%"></select>
                    </td>
                </tr>

                <tr>
                    <th class="formTitle">项目性质：</th>
                    <td class="formValue">

                        <select id="ProjectNature" class="select" datacol="yes" err="项目性质" checkexpession="NotNull" style="width: 96%">
