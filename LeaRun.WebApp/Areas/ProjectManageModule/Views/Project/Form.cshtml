                        <input id="ProjectStatus" type="text" class="txt" datacol="yes" err="项目状态" checkexpession="NotNull" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">基准：</th>
                    <td class="formValue">
                        <input id="BenchMark" type="text" class="txt" datacol="yes" err="基准" checkexpession="NotNull" />
                    </td>

                    <th class="formTitle">目标：</th>
