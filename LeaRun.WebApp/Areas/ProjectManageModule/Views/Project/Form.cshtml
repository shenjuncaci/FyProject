                            <option value="物耗">物耗</option>
                            <option value="采购">采购</option>
                            <option value="能耗">能耗</option>
                            <option value="物流">物流</option>
                            <option value="成品率">成品率</option>
                            <option value="工厂费用">工厂费用</option>
                            <option value="质量">质量</option>
                            <option value="效率">效率</option>
                            <option value="资金">资金</option>
                            <option value="其他">其他</option>
                        </select>
                    </td>

                    <th class="formTitle">项目状态：</th>
                    <td class="formValue">
                        <input id="ProjectStatus" type="text" class="txt" datacol="yes" err="项目状态" checkexpession="NotNull" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">基准：</th>
                    <td class="formValue">
                        <input id="BenchMark" type="text" class="txt" datacol="yes" err="基准" checkexpession="NotNull" />
                    </td>

                    <th class="formTitle">目标：</th>
                    <td class="formValue">
                        <input id="Target" type="text" class="txt" datacol="yes" err="目标" checkexpession="NotNull" />
                    </td>
                </tr>

                <tr>
                    <th class="formTitle">项目指标：</th>
                    <td class="formValue">
                        <input id="ProjectIndicators" type="text" class="txt" datacol="yes" err="项目指标" checkexpession="NotNull" />
                    </td>

                    <th class="formTitle">收益计算公式&说明：</th>
                    <td class="formValue">
                        <input id="CalculationFormula" type="text" class="txt" datacol="yes" err="收益计算公式" checkexpession="NotNull" />
                    </td>
                </tr>
            </table>

            <table id="DetailForm" class="form-bill">
                <tr><td colspan="3"><strong>成员管理</strong></td><td><a class="button button-caution button-square button-small" onclick="addbatch()">添加</a></td></tr>
                <tr>
                    <th style="width:20%">用户名</th>
                    <th style="width:20%">岗位</th>
                    <th style="width:50%">职责描述</th>

                    <th style="width:10%">删除</th>
                </tr>
            </table>
        </div>


    </div>

</form>
