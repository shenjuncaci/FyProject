        var url = "/TrainModule/skill/EvaluateForm?KeyValue=" + KeyValue;

        openDialog(url, "EvaluateForm", "评审表", 660, 350, function (iframe) {
            top.frames[iframe].AcceptClick();
        });
    }

    function btn_editM() {
        var KeyValue = GetJqGridRowValue("#gridTable", "userid");


        var url = "/TrainModule/skill/DepartPostList?KeyValue=" + KeyValue+"&IsMain=1";

        openDialog(url, "UserList", "岗位编辑", 625, 350, function (iframe) {
            top.frames[iframe].AcceptClick();
        });
    }


    //刷新
    function windowload() {
        $("#gridTable").trigger("reloadGrid"); //重新载入
    }


    function perFormat(cellvalue, options, rowObject) {

            return cellvalue+'%';

    }

