<script>
    var c = parseInt($("#secend").html());
    var m = parseInt($("#minute").html());
    var h = parseInt($("#hour").html());


    function timedCount() {
        //// 秒针   
        c++;
        console.log(c);
        c < 10 ? c = "0" + c : c;
        if (c === 60) {
            c = 0;
        }
        // 写回到页面中  
        $("#secend").html(c);


        //// 分针、时针  
        if (c % 60 === 0) {
            m++;
            m < 10 ? m = "0" + m : m;
            if (m === 60) {
                m = 0;
                h++;
                h < 10 ? h = "0" + h : h;
                if (h === 24) {
                    h = 0;
                }
            }
        }
        // 写回到页面中  
        $("#minute").html(m);
        $("#hour").html(h);
    }


    var start = setInterval("timedCount()", 1000);


