@{
    ViewBag.Title = "用户查询";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<link href="~/Content/Styles/buttons.css" rel="stylesheet" />
<script>
    //var CompanyId = GetQuery('CompanyId');                //公司主键
    var CustomExamID = GetQueryNew('KeyValue');                      //用户主键
    $(function () {
        GetList();
    })
    //加载角色,加入了ViewData["role"]细化权限，分层审核车间主任可以添加或者删除分层审核车间班长的权限
    function GetList() {
        getAjax("/TrainModule/CustomExam/GetUserList", { CustomExamID: GetQueryNew('KeyValue') }, function (data) {
            $(".sys_spec_text").html(data);
        });
        $("#RoleList li").click(function () {
            if (!$(this).attr('disabled')) {
                if (!!$(this).hasClass("selected")) {
                    $(this).removeClass("selected");
                } else {
                    $(this).addClass("selected").siblings("li");
                }
            }
        });
        //自定义复选框 全选/反选
        $("#CheckButton").click(function () {
            if (!!$(this).hasClass("checkAllOff")) {
                $(this).attr('title', '反选');
                $(this).text('反选');
                $(this).attr('class', 'checkAllOn');
                $('.sys_spec_text li').addClass('selected');
            } else {
                $(this).attr('title', '全选');
                $(this).text('全选');
                $(this).attr('class', 'checkAllOff');
                $('.sys_spec_text li').removeClass('selected');
            }
        });
        //模糊查询角色（注：这个方法是理由jquery查询）
        $("#txt_Search").keyup(function () {
            if ($(this).val() != "") {
                var Search = $(this).val();
                window.setTimeout(function () {
                    $(".sys_spec_text li")
                     .hide()
                     .filter(":contains('" + (Search) + "')")
                     .show();
                }, 100);
            } else {
                $(".sys_spec_text li").show();
            }
        }).keyup();
    }

    function UserListSubmit()
    {
        Loading(true, "正在提交数据...");
        var ObjectId = ""; $('.sys_spec_text .selected a').each(function () { ObjectId += $(this).attr('id') + ","; });
        var postData = { CustomExamID: CustomExamID, ObjectId: ObjectId }
        AjaxJson("/TrainModule/CustomExam/UserListSubmit", postData, function (data) {
            //Loading(false);
            window.close();
        });

    }
