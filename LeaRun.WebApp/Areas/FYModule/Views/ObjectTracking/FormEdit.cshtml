                alert("上传成功");
                //alert(file);
                //alert(data);
                //var address = String(data["res_msfj"]).replace('~', '../../../../')
                //document.getElementById("tt").innerHTML = "<a href=\"" + address + "\" download=\"附件下载\">附件下载</a>";

                //document.getElementById("uploadify").style.display = "none";
                var DataJson = JSON.parse(data);
