    }

    function deleteAttach()
    {
        if ('@role' != "质保部审批")
        {
            alert("你没有权限删除");
            top.frames[tabiframeId()].windowload();
            //alert("成功更新" + msg + "条记录");

            //closeDialog();
            return false;
        }
        var durl = encodeURI('@Url.Action("deleteAttach", "ObjectTracking")?KeyValue=' + GetQueryNew('KeyValue'));
        $.ajax({
