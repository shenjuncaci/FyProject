        $("#uploadify").uploadify({
            uploader: '/FYModule/HrProblem/SubmitUploadify?FolderId=' + GetQueryNew('KeyValue')+'&type=1',
            swf: '/Content/Scripts/uploadify/uploadify.swf',
            buttonText: "添加文件",
